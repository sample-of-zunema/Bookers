<P id="notice">
  <%= notice %>
</P>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <lavel>Title</lavel>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
